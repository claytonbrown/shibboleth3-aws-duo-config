{
    "AWSTemplateFormatVersion" : "2010-09-09",
    "Description"              : "CF Template to create a Simple AD",
    "Parameters"               : {
        "DirectoryName" : {
            "Description" : "Name of the directory (corp.example.com)",
            "Type"        : "String"
        },
        "DirectoryShortName" : {
            "Description" : "Short name of the directory (CORP)",
            "Type"        : "String"
        },
        "AdminPassword"      : {
            "Description" : "Directory administrator password",
            "Type"        : "String",
            "NoEcho"      : "true"
        },
        "VpcId"              : {
            "Description" : "VPC for the directory",
            "Type"        : "AWS::EC2::VPC::Id"
        },
        "SubnetIds"          : {
            "Description" : "VPC subnet IDs for the directory (choose 2)",
            "Type"        : "List<AWS::EC2::Subnet::Id>"
        }
    },
    "Resources"                : {
        "Directory" : {
            "Type" : "AWS::DirectoryService::SimpleAD",
            "Properties" : {
                "Description" : "AWS Simple AD",
                "Name"        : {
                    "Ref" : "DirectoryName"
                },
                "Password"    : {
                    "Ref" : "AdminPassword"
                },
                "ShortName"   : {
                    "Ref" : "DirectoryShortName"
                },
                "Size"        : "Small",
                "VpcSettings" : {
                    "SubnetIds" : {
                        "Ref" : "SubnetIds"
                    },
                    "VpcId"     : {
                        "Ref" : "VpcId"
                    }
                }
            }
        },
        "SsmDocument" : {
            "Type" : "AWS::SSM::Document",
            "Properties" : {
                "Content" : {
                    "schemaVersion" : "1.2",
                    "description"   : "Join computer to Simple AD",
                    "runtimeConfig" : {
                        "aws:domainJoin" : {
                            "properties" : {
                                "directoryId" : {
                                    "Ref" : "Directory"
                                },
                                "directoryName" : {
                                    "Ref" : "DirectoryName"
                                },
                                "dnsIpAddresses" : {
                                    "Fn::GetAtt" : [
                                        "Directory",
                                        "DnsIpAddresses"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },

		"InstanceRole" : {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version" : "2012-10-17",
					"Statement": [ {
						"Effect": "Allow",
						"Principal": {
							"Service": [ "ec2.amazonaws.com" ]
						},
						"Action": [ "sts:AssumeRole" ]
					} ]
				},
				"Path": "/",
				"ManagedPolicyArns": [
					"arn:aws:iam::aws:policy/service-role/AmazonEC2RoleforSSM"
				]
			}
		},
		"InstancePolicy": {
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "root",
				"PolicyDocument": {
					"Version" : "2012-10-17",
					"Statement": [ {
						"Effect": "Allow",
						"Action": [
							"ssm:CreateAssociation"
						],
						"Resource": "*"
					} ]
				},
				"Roles": [ { "Ref": "InstanceRole" } ]
			}
		},
		"InstanceProfile" : {
			"Type": "AWS::IAM::InstanceProfile",
			"Properties": {
				"Path": "/",
				"Roles": [ {
					"Ref": "InstanceRole"
				} ]
			}
		}
    },
    "Outputs"                  : {
        "JoinDomainSsmDocumentName" : {
            "Value" : {
                "Ref" : "SsmDocument"
            }
        },
		"Ec2InstanceProfile" : {
            "Value" : {
                "Ref" : "InstanceProfile"
            }
        }
    }
}